<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/burglar_item_icon"
        android:layout_width="@dimen/activity_burglar_item_size"
        android:layout_height="@dimen/activity_burglar_item_size" />

    <TextView
        android:id="@+id/burglar_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="@dimen/activity_burglar_item_text"
        android:listSelector="@android:color/transparent"/>
</LinearLayout>